<div id="fi_metrics">
    <h5>FI Counts</h5>
    <div class="row-fluid">
      <div class="span12">
        <table class="table">
          <thead>
          <tr>
            <th>Name</th>
            <th>Total</th>
            <th>Success</th>
            <th>Errors</th>
            <th>Type</th>
            <th>Who</th>
            <th>IP</th>
          </tr>
          </thead>
          <tbody>
          <% if @fis && @fis.size > 0 %>
          <% @fis.each do |fi| %>
              <tr>
                <td><%= fi.msg_name %></td>
                <td><%= fi.total_count %></td>
                <td style="color:green"><%= fi.success_count %></td>
                <td style="color:red"><%= fi.error_count %></td>
                <%  if fi.fi.nil? %>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                <% else %>
                    <td><%= fi.fi_type %></td>
                    <td><%= fi.fi_org %></td>
                <% end %>
                <%  if fi.fi.nil? %>
                    <td><%= fi.ip %></td>
                <% else %>
                    <td><%= fi.fi.display_name %> (<%= fi.ip %>)</td>
                <% end %>
              </tr>
          <% end %>
          <% else %>
              <tr><td colspan="7">No FI details available at this time</td></tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <hr/>
      <div class="row-fluid">
        <div class="span12">
          <a href="<%= dashboard_fi_reset_path %>" class="btn btn-small btn-primary">Delete and Reset Metrics</a>
        </div>
      </div>
    </div>
</div>
