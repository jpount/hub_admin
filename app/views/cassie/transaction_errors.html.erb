<h3>Data Store - errors</h3>

<%= render "connect" %>

<div class="tab-pane active" id="#transactions">
  <div class="row-fluid">
    <div class="span12">
      <h4 class="heading">Error count = <%= @countTxnErrs %></h4>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <table class="table table-condensed table-hover">
        <thead>
        <tr>
          <th>Key</th>
          <th>xml</th>
        </tr>
        </thead>
        <tbody>
        <% if @txn_errs.nil? %>
            <tr>
              <td colspan="2">No records</td>
            </tr>
        <% else %>
            <tr>
              <td><%= @txn_errs.id %></td>
              <td><%= @txn_errs.xml %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

